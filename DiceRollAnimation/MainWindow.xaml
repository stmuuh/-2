<Window x:Class="DiceRollAnimation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dice Roll Animation" Height="450" Width="800">
    <Window.Resources>
        <ImageBrush x:Key="Dice1" ImageSource="pack://application:,,,/Images/dice1.png"/>
        <ImageBrush x:Key="Dice2" ImageSource="pack://application:,,,/Images/dice2.png"/>
        <ImageBrush x:Key="Dice3" ImageSource="pack://application:,,,/Images/dice3.png"/>
        <ImageBrush x:Key="Dice4" ImageSource="pack://application:,,,/Images/dice4.png"/>
        <ImageBrush x:Key="Dice5" ImageSource="pack://application:,,,/Images/dice5.png"/>
        <ImageBrush x:Key="Dice6" ImageSource="pack://application:,,,/Images/dice6.png"/>
    </Window.Resources>
    <Viewport3D Name="viewport3D">
        <Viewport3D.Camera>
            <PerspectiveCamera Position="0,0,5" LookDirection="0,0,-5" UpDirection="0,1,0" FieldOfView="45"/>
        </Viewport3D.Camera>
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <DirectionalLight Color="White" Direction="-1,-1,-2"/>
            </ModelVisual3D.Content>
        </ModelVisual3D>
    </Viewport3D>
</Window>